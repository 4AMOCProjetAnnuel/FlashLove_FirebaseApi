module.exports = (app) => {

    return function (req, res) {

        let qrCode = app.qr.imageSync('I am alive', { type: 'png' })

        qrCode.pipe(require('fs').createWriteStream('./uploads/i_love_qr.png'));

        // app.gcs.bucket('flashloveapi.appspot.com').file(qrCode)

        // let childRef = app.bucketRef.child('user_1_ref')

        res.json({'hello': 'World'})
    }

}